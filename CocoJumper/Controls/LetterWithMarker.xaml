<UserControl x:Class="CocoJumper.Controls.LetterWithMarker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:CocoJumper.Controls"
    x:Name="_this">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <controls:Marker MarkerText="{Binding ElementName=_this, Path=MarkerText}"
                     Height="{Binding ElementName=_this, Path=MarkerHeight}"
                     FontSize="{Binding ElementName=_this, Path=MarkerFontSize}" />
</UserControl>